


@model IndexViewModel


<div class="container">
    <main role="main" class="pb-3">

        <div class="row">
            <div class="col-md-6 offset-md-3">
                @foreach (Ad a in Model.Ads)
                {
                    <div class="jumbotron">
                        <h5>Listed by @a.Name</h5>
                        <h5>Listed on @a.Date</h5>
                        <h5>Phone Number: @a.Number</h5>
                        <h3>Details:</h3>
                        <p>@a.Text</p>
                       
                            <form method="post" action="/home/delete">
                                <input type="hidden" name="id" value="@a.Id" />
                                <button class="btn btn-danger">Delete</button>
                            </form>

                        
                    </div>
                }
            </div>
        </div>
    </main>
</div>
